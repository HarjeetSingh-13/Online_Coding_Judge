generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Problem {
  id            Int          @id @default(autoincrement())
  title         String
  description   String
  inputMethod   String
  outputMethod  String
  testCaseCount Int
  memoryLimit   Int
  timeLimit     Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  Submission    Submission[]
}

model User {
  id          String       @id
  name        String
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime
  submissions Submission[]
}

model Submission {
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime
  code      String
  debugInfo String
  language  String
  problemId Int
  runtime   Int
  verdict   String
  id        Int      @id @default(autoincrement())
  Problem   Problem  @relation(fields: [problemId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}
